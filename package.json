{
  "name": "contracts-ui-builder-monorepo",
  "private": true,
  "version": "1.15.0",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "pnpm -r clean",
    "install-deps": "pnpm install --frozen-lockfile --ignore-scripts --prefer-offline",
    "check-symlinks": "node scripts/manage-symlinks.js check",
    "fix-symlinks": "node scripts/manage-symlinks.js fix",
    "create-symlinks": "node scripts/manage-symlinks.js create",
    "dev": "pnpm --filter=@openzeppelin/contracts-ui-builder-app dev",
    "docker:dev": "docker-compose up --build",
    "build": "pnpm clean && NODE_OPTIONS='--max-old-space-size=8192' pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "coverage": "pnpm -r coverage",
    "preview": "pnpm --filter=@openzeppelin/contracts-ui-builder-app preview",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "lint:all-fix": "pnpm -r lint:all-fix",
    "lint:adapters": "pnpm --filter='./packages/adapter-*' lint:adapters",
    "lint:config-files": "pnpm --filter=@openzeppelin/contracts-ui-builder-app lint:config-files",
    "type-check": "pnpm -r type-check",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "fix-all": "pnpm format && pnpm lint:fix",
    "ui:add": "pnpm --filter=@openzeppelin/contracts-ui-builder-app ui:add",
    "prepare": "husky install",
    "test:coverage": "pnpm -r test:coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "commit": "git-cz",
    "update-deps": "pnpm update -r",
    "update-deps:major": "pnpm update -r --latest",
    "check-deps": "node --no-warnings scripts/check-deps.cjs",
    "update-export-versions": "node scripts/update-export-versions.cjs",
    "outdated": "pnpm outdated -r",
    "export-app": "node packages/builder/src/export/cli/export-app.cjs",
    "preinstall": "npx only-allow pnpm",
    "changeset": "changeset",
    "install-pnpm": "npm install -g pnpm"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs}": "pnpm fix-all"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.0",
    "@storybook/addon-controls": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-storybook": "^0.11.6",
    "eslint-plugin-unused-imports": "^4.1.4",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsup": "^8.5.0",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=20.11.1"
  },
  "packageManager": "pnpm@9.10.0",
  "pnpm": {
    "overrides": {
      "use-sync-external-store": "^1.2.0",
      "valtio": "^1.13.2",
      "@paulmillr/qr": "npm:qr@^0.5.0",
      "@walletconnect/modal": "2.7.0",
      "@types/react": "^19.1.8",
      "prettier": "3.6.2",
      "prettier-plugin-tailwindcss": "0.6.14",
      "@ianvs/prettier-plugin-sort-imports": "4.5.1"
    }
  },
  "dependencies": {
    "jszip": "^3.10.1"
  }
}

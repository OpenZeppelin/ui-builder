{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@styles/*": ["../styles/src/*"],
      "@openzeppelin/ui-builder-types/*": ["../types/src/*"],
      "@openzeppelin/ui-builder-ui": ["../ui/src/index.ts"],
      "@openzeppelin/ui-builder-ui/*": ["../ui/src/*"]
    },
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "src/export/**/*.ts"
  ],
  "exclude": ["src/export/codeTemplates/*.template.tsx"]
}

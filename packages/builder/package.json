{
  "name": "@openzeppelin/contracts-ui-builder-app",
  "private": true,
  "version": "0.8.0",
  "type": "module",
  "bin": {
    "export-app": "src/export/cli/export-app.cjs"
  },
  "scripts": {
    "dev": "vite",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' tsc --skipLibCheck && NODE_OPTIONS='--max-old-space-size=8192' vite build --emptyOutDir",
    "lint": "eslint 'src/**/*.{ts,tsx}' --report-unused-disable-directives --max-warnings 0 --config eslint.config.cjs",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix --config eslint.config.cjs",
    "lint:all-fix": "eslint 'src/**/*.{ts,tsx,js,cjs,mjs}' --fix --config eslint.config.cjs",
    "lint:adapters": "node lint-adapters.cjs",
    "lint:config-files": "eslint 'vite.config.ts' 'vitest.config.ts' --fix --config eslint.config.cjs || true",
    "fix-all": "pnpm format && pnpm lint:all-fix",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" --config ../../.prettierrc.cjs",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" --config ../../.prettierrc.cjs",
    "ui:add": "npx shadcn-ui@latest add",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:report": "vitest run --reporter=json --outputFile=./test-results/export-tests.json src/export/__tests__/",
    "export-app": "node src/export/cli/export-app.cjs",
    "storybook": "cd ../.. && pnpm storybook",
    "build-storybook": "cd ../.. && pnpm build-storybook"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@icons-pack/react-simple-icons": "^12.9.0",
    "@openzeppelin/contracts-ui-builder-adapter-evm": "workspace:*",
    "@openzeppelin/contracts-ui-builder-adapter-midnight": "workspace:*",
    "@openzeppelin/contracts-ui-builder-adapter-solana": "workspace:*",
    "@openzeppelin/contracts-ui-builder-adapter-stellar": "workspace:*",
    "@openzeppelin/contracts-ui-builder-react-core": "workspace:*",
    "@openzeppelin/contracts-ui-builder-renderer": "workspace:*",
    "@openzeppelin/contracts-ui-builder-storage": "workspace:^",
    "@openzeppelin/contracts-ui-builder-styles": "workspace:*",
    "@openzeppelin/contracts-ui-builder-types": "workspace:*",
    "@openzeppelin/contracts-ui-builder-ui": "workspace:*",
    "@openzeppelin/contracts-ui-builder-utils": "workspace:^",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.84.1",
    "@types/jszip": "^3.4.1",
    "@uiw/react-textarea-code-editor": "^3.1.1",
    "@web3icons/react": "^4.0.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fast-equals": "^5.2.2",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.510.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "use-deep-compare-effect": "^1.8.1",
    "viem": "^2.33.3",
    "wagmi": "^2.16.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/ga-gtag": "^1.2.0",
    "@types/lodash": "^4.17.20",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenZeppelin/ui-builder",
    "directory": "packages/builder"
  }
}
